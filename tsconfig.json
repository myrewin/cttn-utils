{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
