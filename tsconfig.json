{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src","index.d.ts"],
  "exclude": ["node_modules"]
}